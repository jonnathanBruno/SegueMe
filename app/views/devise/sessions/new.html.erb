<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block">
                            <%= image_tag "logo.png", height:"500", width:"550" %>
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Segue-Me</h1>
                                </div>
                                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                    <div class="form-group">
                                      <%= f.input :email,
                                                  required: false,
                                                  class: "form-control form-control-user",
                                                  placeholder: "EndereÃ§o de Email...",
                                                  autofocus: true,
                                                  input_html: { autocomplete: "email" } %>
                                    </div>
                                    <div class="form-group">
                                           <%= f.input :password,
                                                        required: false,
                                                        class: "form-control form-control-user",
                                                        placeholder: "Senha",
                                                        input_html: { autocomplete: "current-password" } %>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <%= f.input :remember_me, as: :boolean, class: "custom-control-label" if devise_mapping.rememberable? %>
                                        </div>
                                    </div>
                                      <div class="form-actions">
                                        <%= f.button :submit, "Login", class: "btn btn-primary btn-user btn-block" %>
                                      </div>
                                    <hr>
                                <% end %>

                                <div class="text-center">
                                    <%= render "devise/shared/links", class: "small" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Montar Equipes</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3"></div>

        <div class="card-body">
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <% @teams.each do |team| %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= team.name.delete(' ') %>" aria-expanded="false" aria-controls="flush-collapseOne">
                            <span class="show"><%= team.name %></span>
                        </button>
                        </h2>
                        <div id="<%= team.name.delete(' ') %>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <%= render "table_teams", team: team, funcao: "Jovem Coordenador" if existeFuncao?(team.id, "Jovem Coordenador")%>
                                <%= render "table_teams", team: team, funcao: "Casal Coordenador" if existeFuncao?(team.id, "Casal Coordenador")%>
                                <%= render "table_teams", team: team, funcao: "Casal Apoio" if existeFuncao?(team.id, "Casal Apoio")%>
                                <%= render "table_teams", team: team, funcao: "Jovem Apoio" if existeFuncao?(team.id, "Jovem Apoio")%>
                                <%= render "table_teams", team: team, funcao: "Casal Equipista" if existeFuncao?(team.id, "Casal Equipista")%>
                                <%= render "table_teams", team: team, funcao: "Jovem Equipista" if existeFuncao?(team.id, "Jovem Equipista")%>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <%= link_to 'Inserir Equipista', new_mounting_team_path, class:"btn btn-success mb-4" %>     
</div>
</div>

<!-- Footer -->
<%= render "layouts/footer"%>
<!-- End of Footer -->
</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
            
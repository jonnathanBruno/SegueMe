<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Montar Equipes</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3"></div>

        <div class="card-body">
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <% @teams.each do |team| %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= team.name.delete(' ') %>" aria-expanded="false" aria-controls="flush-collapseOne">
                            <span class="show"><%= team.name %></span>
                        </button>
                        </h2>
                        <div id="<%= team.name.delete(' ') %>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                               <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                            <th class="col-5">Nome Seguidor</th>
                                            <th class="col-2">Função</th>
                                            <th class="col-2">Contato</th>
                                            <th class="col-2">Ano</th>
                                            <th colspan="1"></th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                        <tbody>
                                            <% @mountings = Mounting.where(team_id: team.id) %>
                                            <% @mountings.each do |mt| %>
                                            <tr>
                                                <td class="show"><%= mt.follower.name %></td>
                                                <td class="show"><%= mt.occupation %></td>
                                                <td class="show"><%= mt.follower.contact.contact %></td>
                                                <td class="show"><%= mt.year %></td>
                                                <td>
                                                    <%= link_to mounting_team_path(mt), method: :delete, data: { confirm: 'Você tem certeza?' }, class:"btn btn-danger", style: "margin-bottom: 2px;" do %>
                                                        <i class="fa-regular fa-trash-can"></i>
                                                    <% end %>
                                                </td>
                                            </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <%= link_to 'Inserir Equipista', new_mounting_team_path, class:"btn btn-success mb-4" %>     
</div>
</div>

<!-- Footer -->
<%= render "layouts/footer"%>
<!-- End of Footer -->
</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
            
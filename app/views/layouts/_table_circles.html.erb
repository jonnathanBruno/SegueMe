<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr class="<%= if circle.color == 'Vermelho' 
                        'vermelho' 
                        elsif circle.color == 'Verde' 
                        'verde' 
                        elsif circle.color == 'Azul'  
                        'azul'
                        elsif circle.color == 'Amarelo' 
                        'amarelo'
                        elsif circle.color == 'Rosa' 
                        'rosa'
                        else
                        'laranja'
                        end
                    %>" >
            <% buscarCoordenadorCirculo(circle.id) %>
            <% buscarCasalCirculo(circle.id) %>
            <th class="show-quadrante text-center th-padrinhos" colspan="12" scope="col-12">
                PADRINHOS JOVENS: 
                    <% @coordenadores.each do |c| %>
                        <%= maiuscula(c.follower.name) + " | " %> 
                    <%end%> 
                    <br>
                PADRINHOS CASAL:
                    <% @casalApoio.each do |c| %>
                        <%= maiuscula(c.follower.name) + " | " %> 
                    <%end%>
            </th>
        </tr>
    </thead>
    <tbody>
        <% buscarFuncaoCirculo(circle.id, funcao) %>
        <% @funcao.each do |c| %>
            <tr>
                <td class="show-quadrante text-center"><%= maiuscula(c.participant.name) %></td>
                <td class="show-quadrante text-center"><%= "--" if !c.participant.surname.present? %><%= maiuscula(c.participant.surname) %></td>
        <% end %>
    </tbody>
</table>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Equipes</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3"></div>
            <div class="card-body">
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <% @teams.each do |team| %>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="flush-headingOneMain">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= team.name.delete(' ') %>" aria-expanded="false" aria-controls="flush-collapseOne">
                                    <span class="show"><%= team.name %></span>
                                </button>
                            </h2>
                            <div id="<%= team.name.delete(' ') %>" class="accordion-collapse collapse" aria-labelledby="flush-headingOneMain" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">    
                                    <% @teste = %w(2015 2016 2017 2018 2019 2022) %>
                                        <% @teste.each do |ano| %>
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="flush-heading<%=ano%>">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#primeiraTema<%=ano%>" aria-expanded="false" aria-controls="flush-collapse<%=ano%>">
                                                <h6 class="h6 text-gray-700 text-justify me-4">Segue-me <%=ano%></h6>
                                            </button>
                                            </h2>
                                            <div id="primeiraTema<%=ano%>" class="accordion-collapse collapse" aria-labelledby="flush-heading<%=ano%>" data-bs-parent="#accordion<%=ano%>">
                                                <div class="accordion-body">
                                                    <%= render "table_teams", team: team, ano: ano, ano: ano, funcao: "Jovem Coordenador" if existeFuncaoGeral?(team.id, "Jovem Coordenador", ano)%>
                                                    <%= render "table_teams", team: team, ano: ano, funcao: "Casal Coordenador" if existeFuncaoGeral?(team.id, "Casal Coordenador", ano)%>
                                                    <%= render "table_teams", team: team, ano: ano, funcao: "Casal Apoio" if existeFuncaoGeral?(team.id, "Casal Apoio", ano)%>
                                                    <%= render "table_teams", team: team, ano: ano, funcao: "Jovem Apoio" if existeFuncaoGeral?(team.id, "Jovem Apoio", ano)%>
                                                    <%= render "table_teams", team: team, ano: ano, funcao: "Casal Equipista" if existeFuncaoGeral?(team.id, "Casal Equipista", ano)%>
                                                    <%= render "table_teams", team: team, ano: ano, funcao: "Jovem Equipista" if existeFuncaoGeral?(team.id, "Jovem Equipista", ano)%>
                                                </div>
                                            </div>
                                        </div> 
                                    <%end%>    
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
        </div>    
    </div>
    
</div>
</div>

<!-- Footer -->
<%= render "layouts/footer"%>
<!-- End of Footer -->
</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


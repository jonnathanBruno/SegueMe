<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Seguimistas Cadastrados</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                        <th class="col-4">Nome do Seguimista</th>
                        <th class="col-1">Apelido</th>
                        <th class="col-2">Contato</th>
                        <th class="col-2">Data de Nascimento</th>
                        <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tfoot>
                    <tbody>
                        <% @participants.each do |participant| %>
                        <tr>
                            <td class="show"><%= participant.name %> </td>
                            <td class="show"><%= participant.surname %> </td>
                            <td class="show"><%= "--" if !participant.contact.present? %><%= participant.contact %></td>
                            <td class="show"><%= mes_dia_ano(participant.birth) %></td>
                            <td>
                                <%= link_to participant,  class:"btn btn-warning", style: "margin-bottom: 2px;" do %>
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                <% end %>

                                <%= link_to edit_participant_path(participant),  class:"btn btn-primary", style: "margin-bottom: 2px;" do %>
                                    <i class="fa-solid fa-pen-to-square"></i>
                                <% end %>

                                <%= link_to participant, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class:"btn btn-danger", style: "margin-bottom: 2px;" do %>
                                    <i class="fa-regular fa-trash-can"></i>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                 <%= render "layouts/pagination", paginacao: @participants %> 
            </div>
        </div>
    </div>
    
</div>
</div>

<!-- Footer -->
<%= render "layouts/footer"%>
<!-- End of Footer -->
</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fa-solid fa-circle-arrow-up"></i>
</a>


            
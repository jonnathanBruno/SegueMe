  <div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Detalhes Seguidor</h1>
    <div class="card shadow mb-4">

      <div class="card-body">
        <div class="card-header">
            <h3 class="well"><%= @follower.name %></h3>
        </div>

        <div class="container mt-4">
          <div class="form-horizontal">

            <div class="control-group">
              <label class="control-label show"><strong>Encontrista: </strong> Seguidor </label>
            </div>

            <div class="control-group">
              <label class="control-label show"><strong>Aniversário: </strong> <%= mes_dia_ano(@follower.birth) %></label>
            </div>

            <div class="control-group">
              <label class="control-label show"><strong>Paróquia: </strong><%= @follower.parish.name %></label>
            </div>

            <div class="control-group">
                <label class="control-label show"><strong>Telefone: </strong><%= @follower.contact %></label>
            </div>

            <div class="control-group">
                <label class="control-label show"><strong>Email: </strong><%= @follower.email %></label>
            </div>

            <div class="control-group">
                <label class="control-label show"><strong>Endereço: </strong><%= @follower.address %></label>
            </div>

             <div class="control-group mt-4">
                <%= link_to 'Editar', edit_follower_path(@follower), class:"btn btn-primary" %>
                <%= link_to 'Voltar', followers_path, class:"btn btn-secondary" %>
            </div>

          </div>
        </div>
      </div>
   
      <div class="card-body">
        <div class="card-header">
            <h3 class="well">Equipes de Trabalho</h3>
        </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                        <th class="col-6">EQUIPE</th>
                        <th class="col-4">FUNÇÃO</th>
                        <th class="col-2">ANO</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @equipesTrabalhadas.each do |t| %>
                          <tr>
                              <td class="show fw-bold"><%= t.team.name %> </td>
                              <td class="show"><%= t.occupation %> </td>
                              <td class="show"><%= t.year %> </td>
                          </tr>
                        <% end %>
                    </tbody>
                </table>                                    
            </div>
        </div>
   
    </div>
  </div>
</div>


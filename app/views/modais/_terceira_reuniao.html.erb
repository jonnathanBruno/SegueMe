                                                                <div class="col-md-12">
                                                                    <input type="text" class="form-control" id="temaTresPerguntaDoisCirculo<%= circle.color %>" aria-describedby="nomeCirculo">
                                                                </div>
                                                            </div>
                                                            <button class="btn btn-success mt-4" type="button" onClick="cadastrarRespostas('<%= circle.color %>','Tres','Dois')"> Cadastrar Resposta </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% end %>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    </div> 


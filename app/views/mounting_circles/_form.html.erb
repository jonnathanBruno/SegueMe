<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Montar Círculo</h1>
    <div class="card shadow mb-4">
      <div class="card-body">
        <%= simple_form_for @mounting, url: mounting_circles_path do |f| %>
            <div class="row">
                <div class="col-md-12">
                    <%= f.association :circle, label_method: :color, :include_blank => "Selecione o círculo", value_method: :id, label: "Círculo"%>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <%= f.input :occupation, as: :select, collection: ["Seguimista", "Coordenador", "Casal Apoio"], label: "Função no Círculo", selected: "Seguimista" %>
                </div>

                <div class="col-md-6">
                      <%= f.input :year, as: :select, label: "Ano do Encontro", collection: ["2013","2014","2015","2016","2017","2018","2019","2020","2021","2022","2023","2024","2025","2026","2027","2028"], selected: "2022" %>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6" id="participante">
                  <%= f.input :participant_id, as: :select, :collection => @participants,
                      :label_method => :name, :value_method => :id, :label => "Escolher Equipista" , :include_blank => false %>
                </div>
                <div class="col-md-6" id="seguidor">
                  <%= f.input :follower_id, as: :select, :collection => @followers,
                      :label_method => :name, :value_method => :id, :label => "Escolher Padrinho" , :include_blank => false %>
                </div>
            </div>
            <%= f.button :submit, "Inserir no Círculo", class: "btn btn-primary"%>
            <%= link_to 'Voltar', mounting_circles_path, class:"btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "layouts/footer"%>
</div>
</div>
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

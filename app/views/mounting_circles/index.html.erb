<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Montar CÃ­rculos</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3"></div>

        <div class="card-body">
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <% @circles.each do |circle| %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= circle.color %>" aria-expanded="false" aria-controls="flush-collapseOne">
                            <span class="show"><%= circle.color %></span>
                        </button>
                        </h2>
                        <div id="<%= circle.color %>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <%= render "table_circle", circle: circle, funcao: "Coordenador" %>
                                <%= render "table_circle", circle: circle, funcao: "Casal Apoio" %>
                                <%= render "table_circle", circle: circle, funcao: "Seguimista" %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <%= link_to 'Inserir Equipista', new_mounting_circle_path, class:"btn btn-success mb-4" %>
    
</div>
</div>


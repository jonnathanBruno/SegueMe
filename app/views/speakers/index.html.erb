<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Palestrantes Cadastrados</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                        <th class="col-5">Nome do Palestrante</th>
                        <th class="col-2">Email</th>
                        <th class="col-2">Contato</th>
                        <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tfoot>
                    <tbody>
                        <% @speakers.each do |speaker| %>
                        <tr>
                            <td class="show"><%= speaker.name %> </td>
                            <td class="show"><%= speaker.email %> </td>
                            <td class="show"><%= speaker.contact %></td>
                            <td>
                                <%= link_to speaker,  class:"btn btn-warning", style: "margin-bottom: 2px;" do %>
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                <% end %>

                                <%= link_to edit_speaker_path(speaker),  class:"btn btn-primary", style: "margin-bottom: 2px;" do %>
                                    <i class="fa-solid fa-pen-to-square"></i>
                                <% end %>

                                <%= link_to speaker, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class:"btn btn-danger", style: "margin-bottom: 2px;" do %>
                                    <i class="fa-regular fa-trash-can"></i>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
</div>

<!-- Footer -->
<%= render "layouts/footer"%>
<!-- End of Footer -->
</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

